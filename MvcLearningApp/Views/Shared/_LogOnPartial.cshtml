@if (Request.IsAuthenticated) {
    <p>
        Hello, @Html.ActionLink(User.Identity.Name, "ChangePassword", "Account", new { area = "" }, new { @class = "username" })!
        @Html.ActionLink("Log Off", "LogOff", "Account", new { area = "" }, new { })
    </p>
} else {
    <ul>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: new {area=""}, htmlAttributes: new { id = "registerLink", data_dialog_title = "Registration" })</li>
        <li>@Html.ActionLink("Log on", "LogOn", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "logonLink", data_dialog_title = "Identification" })</li>
    </ul>
}